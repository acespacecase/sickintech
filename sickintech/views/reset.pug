extends layout

block content
  form.form(method="POST")
    .form-group
      h2= title
      label(for="password") Password
      input.form-control(type="password" name="password")
    .form-group
      label(for="passwordConfirm") Confirm Password
      input.form-control(type="password" name="passwordConfirm")
    .form-group
      input.btn.btn-primary(type="submit" value="Reset Password")